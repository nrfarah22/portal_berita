<!DOCTYPE html>
<html>
<head>
    <title>Tambah Berita</title>
</head>
<body>
    <h1>Tambah Berita</h1>
    <form action="/create" method="post">
        <div>
            <label for="judul_berita">Judul Berita:</label>
            <input type="text" id="judul_berita" name="judul_berita">
        </div>
        <div>
            <label for="isi_berita">Isi Berita:</label>
            <textarea id="isi_berita" name="isi_berita"></textarea>
        </div>
        <div>
            <label for="id_kategori">Kategori:</label>
            <select id="id_kategori" name="id_kategori">
                <% for(let i = 0; i < kategori.length; i++) { %>
                    <option value="<%= kategori[i].id_kategori %>"><%= kategori[i].nama_kategori %></option>
                <% } %>
            </select>
        </div>
        <div>
            <label for="author">Author:</label>
            <input type="text" id="author" name="author" value="<%= admin.username %>" readonly>
        </div>
        <div>
            <button type="submit">Tambah</button>
        </div>
    </form>
    <a href="/">Kembali</a>
</body>
</html>
